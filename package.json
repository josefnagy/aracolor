{
  "name": "aracolor",
  "version": "1.0.0",
  "description": "aracolor static website",
  "main": "index.html",
  "scripts": {
    "css": "node-sass sass/main.scss public/resources/css/style.css",
    "css:watch": "npm run css && node-sass sass/main.scss public/resources/css/style.css -w",
    "html": "pug templates/main --out public -w -P",
    "dev": "npm run css:watch & npm run html & live-server public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josefnagy/aracolor.git"
  },
  "keywords": [
    "aracolor"
  ],
  "author": "Josef Nagy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/josefnagy/aracolor/issues"
  },
  "homepage": "https://github.com/josefnagy/aracolor#readme",
  "devDependencies": {
    "node-sass": "^4.12.0",
    "parallelshell": "^3.0.1",
    "pug": "^2.0.3"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "sharp": "^0.22.1"
  }
}
